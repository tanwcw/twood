<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_child_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="homefulfriends.twood.ChildMainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/include4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Transfer to savings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Make a donation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button4"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <Button
            android:text="See tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/button4"
            android:layout_alignParentEnd="true"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true" />
    </LinearLayout>

    <TextView
        android:text="Hey user_name, Here's how much you have today!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/include4"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Checking:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:layout_weight="1" />

            <TextView
                android:text="$0.00"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="30sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Savings:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="30sp" />

            <TextView
                android:text="$0.00"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textSize="30sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3"
            android:layout_marginStart="52dp">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
