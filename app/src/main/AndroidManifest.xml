<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="homefulfriends.twood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden">
        <activity
            android:name=".ParentMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".ChildMainActivity" />
        <activity android:name=".CreateUserActivity" />
        <activity android:name=".TransferActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ParentChildActivity" />
        <activity android:name=".ManageChildActivity" />
        <activity android:name=".SavingsTransferActivity" />
        <activity android:name=".DonationActivity"></activity>
    </application>

</manifest>